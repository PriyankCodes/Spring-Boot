package com.tss.hibernateDemo.service;

import com.tss.hibernateDemo.dao.EmployeeDao;
import com.tss.hibernateDemo.dao.EmployeeDaoImpl;
import com.tss.hibernateDemo.entity.Employee;
import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;

public class EmployeeServiceImpl implements EmployeeService {
	
	@Autowired
    private EmployeeDao employeeDao;

   

    @Override
    public void addEmployee(Employee employee) {
        employeeDao.insert(employee);
    }

    @Override
    public List<Employee> getAllEmployees() {
        return employeeDao.getAll();
    }

    @Override
    public Employee getEmployeeById(int id) {
        return employeeDao.findById(id);
    }

    @Override
    public List<Employee> getEmployeesByName(String name) {
        return employeeDao.findByName(name);
    }

    @Override
    public List<Employee> getEmployeesByDepartment(String deptname) {
        return employeeDao.findByDepartment(deptname);
    }
}
